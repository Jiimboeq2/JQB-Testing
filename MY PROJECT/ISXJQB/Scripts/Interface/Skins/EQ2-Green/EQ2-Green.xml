<?xml version="1.0" encoding="UTF-8" ?>
<ISUI>
    <!-- EQ2-Green Skin - Window Templates -->

    <!-- Base Window Template -->
    <Template Name='Window'>
        <Children>
            <frame name='Window.Background'>
                <X>0</X>
                <Y>0</Y>
                <Width>100%</Width>
                <Height>100%</Height>
                <Strata>-10</Strata>
                <OnLoad>
                    This:SetBackgroundColor[FF0f0f0f]
                    This:SetBorderColor[FF3f3f3f]
                    This.Border:Set[2]
                </OnLoad>
                <Children>
                    <Text name='dummy'><X>0</X><Y>0</Y><Width>1</Width><Height>1</Height><Visible>0</Visible></Text>
                </Children>
            </frame>
        </Children>
    </Template>

    <!-- Window Client Area Template -->
    <Template Name='Window.Client'>
        <Children>
            <frame name='Client.Background'>
                <X>0</X>
                <Y>0</Y>
                <Width>100%</Width>
                <Height>100%</Height>
                <Strata>-9</Strata>
                <OnLoad>
                    This:SetBackgroundColor[FF0f0f0f]
                </OnLoad>
                <Children>
                    <Text name='dummy'><X>0</X><Y>0</Y><Width>1</Width><Height>1</Height><Visible>0</Visible></Text>
                </Children>
            </frame>
        </Children>
    </Template>

    <!-- Window TitleBar Template -->
    <Template Name='Window.TitleBar'>
        <Children>
            <frame name='TitleBar.Background'>
                <X>0</X>
                <Y>0</Y>
                <Width>100%</Width>
                <Height>100%</Height>
                <Strata>-8</Strata>
                <OnLoad>
                    This:SetBackgroundColor[FF1a4b61]
                    This:SetBorderColor[FF2d5f7f]
                    This.Border:Set[1]
                </OnLoad>
                <Children>
                    <Text name='dummy'><X>0</X><Y>0</Y><Width>1</Width><Height>1</Height><Visible>0</Visible></Text>
                </Children>
            </frame>
        </Children>
    </Template>

    <!-- Window TitleBar Title Text -->
    <Template Name='Window.TitleBar.Title'>
        <Font>
            <Size>12</Size>
            <Bold>1</Bold>
        </Font>
        <OnLoad>
            This.Font:SetColor[FFFFFFFF]
        </OnLoad>
    </Template>

    <!-- Window TitleBar Close Button -->
    <Template Name='Window.TitleBar.Close'>
        <Text>X</Text>
        <Font>
            <Size>10</Size>
            <Bold>1</Bold>
        </Font>
        <OnLoad>
            This:SetBackgroundColor[FF2a2a2a]
            This.Font:SetColor[FFFF0000]
        </OnLoad>
    </Template>

    <!-- Command Button Template -->
    <Template Name='commandbutton'>
        <Font>
            <Size>11</Size>
        </Font>
        <OnLoad>
            This:SetBackgroundColor[FF2a2a2a]
            This.Font:SetColor[FFFFFFFF]
        </OnLoad>
    </Template>

    <Template Name='commandbutton.Font'>
        <Size>11</Size>
        <Color>FFFFFFFF</Color>
    </Template>

    <Template Name='commandbutton.Texture'>
        <OnLoad>
            This:SetBackgroundColor[FF2a2a2a]
        </OnLoad>
    </Template>

    <Template Name='commandbutton.TextureHover'>
        <OnLoad>
            This:SetBackgroundColor[FF3f3f3f]
        </OnLoad>
    </Template>

    <Template Name='commandbutton.TexturePressed'>
        <OnLoad>
            This:SetBackgroundColor[FF1a1a1a]
        </OnLoad>
    </Template>
</ISUI>
